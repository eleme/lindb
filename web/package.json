{
  "name": "LinDB",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "node scripts/start.js",
    "build": "node scripts/build.js",
    "test": "node scripts/test.js --updateSnapshot --env=jsdom --setupTestFrameworkScriptFile=raf/polyfill",
    "testc": "node scripts/test.js --env=jsdom --coverage --setupTestFrameworkScriptFile=raf/polyfill",
    "lint": "eslint src --ext .js",
    "deploy": "npm run build && faas deploy",
    "tslint": "tslint -p tsconfig.json"
  },
  "dependencies": {
    "antd": "^3.20.0",
    "autoprefixer": "7.1.2",
    "axios": "0.19.0",
    "case-sensitive-paths-webpack-plugin": "2.1.1",
    "chart.js": "^2.8.0",
    "css-loader": "0.28.4",
    "extract-text-webpack-plugin": "3.0.2",
    "file-loader": "0.11.2",
    "html-webpack-plugin": "3.2.0",
    "jest": "^24.8.0",
    "jest-cli": "^23.6.0",
    "js-yaml": "^3.13.1",
    "less": "^3.9.0",
    "less-loader": "^5.0.0",
    "lodash-es": "^4.17.14",
    "mobx": "5.0.3",
    "mobx-react": "5.2.3",
    "moment-es6": "1.0.0",
    "node": "^12.5.0",
    "postcss-flexbugs-fixes": "3.2.0",
    "postcss-loader": "2.0.6",
    "react": "16.4.1",
    "react-dev-utils": "^5.0.2",
    "react-dom": "16.4.1",
    "react-json-view": "1.19.1",
    "react-lazyload": "^2.6.2",
    "react-moment": "0.7.0",
    "react-native-uuid": "1.4.9",
    "react-router-dom": "4.2.2",
    "sw-precache-webpack-plugin": "0.11.5",
    "ts-jest": "23.0.0",
    "uglifyjs-webpack-plugin": "1.3.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "@types/react": "16.4.6",
    "@types/react-dom": "16.0.6",
    "core-decorators": "0.20.0",
    "simple-progress-webpack-plugin": "1.1.1",
    "source-map-loader": "^0.2.3",
    "style-loader": "0.18.2",
    "ts-loader": "3.5.0",
    "tslint": "5.7.0",
    "tslint-loader": "3.5.3",
    "tslint-react": "3.4.0",
    "typescript": "^3.5.2",
    "url-loader": "0.5.9",
    "webpack": "3.5.1",
    "webpack-bundle-analyzer": "^3.3.2",
    "webpack-dev-server": "3.1.11",
    "webpack-manifest-plugin": "1.2.1",
    "webpack-visualizer-plugin": "0.1.11"
  },
  "jest": {
    "browser": true,
    "mapCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 2,
        "functions": 10,
        "lines": 20,
        "statements": -14400
      }
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.ts?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).ts?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).tsx"
    ],
    "testEnvironment": "jsdom",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^.+\\.tsx?$": "<rootDir>/config/jest/typescriptTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|ts|tsx)$"
    ],
    "moduleFileExtensions": [
      "web.ts",
      "ts",
      "web.tsx",
      "tsx",
      "web.js",
      "js",
      "web.jsx",
      "jsx",
      "json",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.test.json"
      }
    }
  }
}
